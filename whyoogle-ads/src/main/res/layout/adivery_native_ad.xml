<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <com.adivery.sdk.AdiveryNativeAdMediaView
        android:id="@+id/adivery_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/adivery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />


        <TextView
            android:id="@+id/adivery_headline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1.4"
            android:fontFamily="@font/iran_sans_mobile_medium"
            android:maxLines="1"
            android:textColor="@color/advertisementHeadLineColor"
            android:textSize="15sp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/adivery_call_to_action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/back_color_accent_button"
            android:clipToPadding="false"
            android:fontFamily="@font/iran_sans_mobile_medium"
            android:foregroundGravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:foreground="?android:attr/selectableItemBackground" />
    </LinearLayout>

</LinearLayout>
