<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/AyanNativeAdBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/margin_4">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ayan_ad_call_to_action"
            style="@style/AyanAdsButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_32"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4"
            tools:text="ثبت نام" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ayan_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4"
            android:layout_toStartOf="@+id/ayan_ad_call_to_action"
            android:layout_toEndOf="@+id/ayan_ad_app_icon"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/ayanAdvertisementHeadLineColor"
            tools:text="خرید ملک" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@id/ayan_ad_app_icon"
            android:layout_width="@dimen/margin_32"
            android:layout_height="@dimen/margin_32"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_4"
            android:layout_marginTop="@dimen/margin_4"
            android:layout_marginEnd="@dimen/margin_4"
            android:layout_marginBottom="@dimen/margin_4" />
    </RelativeLayout>

</LinearLayout>